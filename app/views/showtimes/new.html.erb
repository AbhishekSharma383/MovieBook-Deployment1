<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <br>
      <h3 class="text-center mb-4">Add New Showtime</h3>

      <%= form_for @showtime, url: showtimes_path, method: :post, class: "mt-4" do |f| %>
        <div class="form-group">
          <%= f.label :movie_id, "Select Movie", class: "font-weight-bold" %>
          <%= f.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Select a Movie" }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :venue_id, "Select Venue", class: "font-weight-bold" %>
          <%= f.collection_select :venue_id, Venue.all, :id, :name, { prompt: "Select a Venue" }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :showtime_at, class: "font-weight-bold" %>
          <%= f.datetime_local_field :showtime_at, class: "form-control" %>
        </div>

        <br>

        <div class="form-group text-center">
          <%= f.submit "Add Showtime", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
