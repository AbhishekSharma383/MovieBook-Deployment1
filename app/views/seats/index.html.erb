<title>Movie Seat Selection</title>
<%= stylesheet_link_tag 'style1' %>
<div class="containerbox">
  <h1>Movie Seat Selection</h1>
  <div class="screen"></div>
  <div class="seat-layout">
    <% rows = ('A'..'J').to_a %>
    <% seat_numbers = (1..8).to_a %>
    <% rows.each do |row| %>
      <% seat_numbers.each do |number| %>
        <% seat = Seat.find_by(row: row, number: number) %>
        <div class="seat <%= seat.status %>" data-id="<%= seat.id %>"><%= row %><%= number %></div>
      <% end %>
      <br>
    <% end %>
  </div>
  <br><br>
  <button id="updateSeatsButton" class="btn btn-primary">Book Seats</button>
  <br><br>
  <label for="numSeats">Number of Seats:</label>
  <input type="number" id="numSeats" value="1" min="1" max="10">
  <button id="findBestSeatButton">Find Best Seats</button>
  <div id="bestSeatsDisplay"></div>
</div>


<%= javascript_include_tag 'seat_selection' %>
<%= javascript_include_tag 'update_seats' %>
<%= javascript_include_tag 'best_seats' %>
