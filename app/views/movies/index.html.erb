<div class="container mt-4">
  <br>
  <div class="text-center">
  <h1>Welcome to the Movie Booking App</h1>
  </div>
  <br>
  <div class="row">
    <% if @movies.any? %>
      <% @movies.each do |movie| %>
        <% if movie.image.attached? %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
            <%= image_tag  movie.image, width: 300, height: 200 %>
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text"><strong>Release Date:</strong> <%= movie.release_date %></p>
                <p class="card-text"><strong>Genre:</strong> <%= movie.genre %></p>
                <!-- You can add more details here -->
              </div>
              <div class="card-footer">
                <div class="row justify-content-between">
                  <div class="col">
                    <%= link_to "Book", book_show_movie_path(movie), class: "btn btn-primary btn-block" %>
                  </div>
                  <div class="col">
                    <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-primary btn-block" %>
                  </div>
                  <div class="col">
                    <%= button_to "Delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure you want to delete this venue?" }, class: "btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="text-center">
        <h3>Please Add Some Movies !!!</h3>
      </div>
    <% end %>
  </div>
</div>
