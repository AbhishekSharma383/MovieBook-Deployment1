<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <br>
      <h1 class="text-center mb-4">Edit Movie</h1>
      <%= form_for @movie, url: movie_path(@movie), method: :patch, class: "mt-4" do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "font-weight-bold" %>
          <%= f.text_field :title, class: "form-control" %>
          <% if @movie.errors.has_key?(:title) %>
            <p class="text-danger"><%= @movie.errors[:title].first %></p>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :description, class: "font-weight-bold" %>
          <%= f.text_area :description, class: "form-control", rows: 4 %>
        </div>

        <div class="form-group">
          <%= f.label :release_date, class: "font-weight-bold" %>
          <%= f.date_field :release_date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :genre, class: "font-weight-bold" %>
          <%= f.text_field :genre, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image, class: "form-label" %>
          <%= f.file_field :image, class: 'form-control-file' %>
        </div>
        
        <br>
        <div class="form-group text-center">
          <%= f.submit "Update Movie", class: "btn btn-primary btn-lg" %>
          <%= link_to "Go back", root_path, class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
