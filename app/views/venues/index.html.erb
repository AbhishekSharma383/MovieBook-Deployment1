<div class="container mt-5">

  <br> 
  <div class="text-center">
    <h5>All Venues</h5>
    <br> <br>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Address</th>
        <th>Capacity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @venues.each do |venue| %>
        <tr>
          <td>
            <% if venue.image.attached? %>
              <%= image_tag venue.image,  width: 300, height: 200 %>
            <% else %>
              No Image Available
            <% end %>
          </td>
          <td><%= venue.name %></td>
          <td><%= venue.address %></td>
          <td><%= venue.capacity %></td>
          <td>
            <%= link_to "Edit", edit_venue_path(venue), class: "btn btn-primary" %>
            <%= button_to "Delete", venue_path(venue), method: :delete, data: { confirm: "Are you sure you want to delete this venue?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
